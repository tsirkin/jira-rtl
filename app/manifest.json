{
    "name": "JiraRTL",
    "short_name": "JiraRTL",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Enables RTL in Jira",
    "browser_action": {
	"default_icon": {
	    "16": "images/hand-rtl-16x16.png",
	    "48": "images/hand-rtl-48x48.png",
	    "128": "images/hand-rtl-128x128.png"
	},
	"default_title": "JiraRTL",
	"default_popup": "popup.html"
    },
    "web_accessible_resources": [
	"scripts/load.js",
	"scripts/rtl.js",
	"rtl.css"
    ],
    "background": {
	"scripts": ["scripts/background.js"]
    },
    "permissions": [
	"webNavigation",
	"activeTab",
	"storage",
	"tabs",
	"http://*/*",
	"https://*/*"
    ]
}
